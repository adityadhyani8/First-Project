# Ask the user for account balance
balance = int(input("Balance: "))

# Ask the user for withdrawal amount
withdrawal = int(input("Withdrawal: "))

# Ask the user for verification status
verified_input = input("Verified? (True/False): ")

# Normalize and validate the Boolean input
if verified_input.lower() == "true":
    verified = True
elif verified_input.lower() == "false":
    verified = False
else:
    print("Invalid input for verification status. Please enter True or False.")
    verified = None

# Process transaction only if verification input was valid
if verified is not None:
    if verified and withdrawal <= balance:
        print("Transaction successful")
        balance -= withdrawal
        print("Withdrawal successful")
    else:
        print("Transaction denied")